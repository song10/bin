#!/bin/sh
if [ '-r' = "$1" ]; then sed -i '' '$d' ~/.payrolltime; fi

payrolltime && exit

xalarm -q -s -a "8:50" "Ready to Home, Rex."
xalarm -q -s -a "9:00" "Rex, Go Home Now!"

if [ 2 = $? ]; then opt='-a -f'; fi

title
sudo echo -n # just to ask sudo password
uname -a | grep -i darwin 2>&1 >/dev/null && aptup
#mygetup $opt
gitup
