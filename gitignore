#!/bin/sh

# $0 [-n] [files]

args="--assume-unchanged"

if test 0 -lt $#; then
	opt=$1
	shift
	case $opt in
		-n) args="$args --no-assume-unchanged";;
		-a) args2=" | tee -a .gitignore";;
	esac
fi

if test 0 -lt $#; then
	git update-index $args $*
else
	if [ -z "$args2" ]; then
		git st | grep -G '^#\t' | sed 's/#	//' | grep -v -G '^\.\.'
	else
		git st | grep -G '^#\t' | sed 's/#	//' | grep -v -G '^\.\.' | tee -a .gitignore
	fi
fi
