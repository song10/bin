if test ! `which curl`; then
	sudo apt-get install -y curl
fi

curl http://npmjs.org/install.sh | npm_config_prefix=$HOME/opt sh
npm install -g \
  npm-registry-client \
  express jade stylus \
  html2jade markdown \
  coffee-script js2coffee \
  jslint \
  nopt \
  dot \
  jquery \
  connect \
  dnode \
  less \
