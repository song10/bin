R=$HOME/wrk
mkdir -p $R
cd $R

sudo apt-get install -y libssl-dev libltdl-dev g++

T=node
build=yes
if [ -d $T/ ]; then
  cd $T
  git reset --hard
  x=`git pul`
  echo ===
  echo $x
  echo ===
  expr "$x" : "Current.*up to date" > /dev/null && \
    build=no && echo no build
else
  git clone git://github.com/joyent/node.git
  cd $T/
fi

if [ "yes" = "$build" -o "yes" = "$force" ]; then
  ./configure --prefix=$HOME/opt
  make
  make install
fi
